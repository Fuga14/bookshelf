<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">
    <i class="bi bi-person"></i> Authors
  </h1>
  <%= link_to books_path, class: "btn btn-outline-secondary" do %>
    <i class="bi bi-arrow-left"></i> Back to Books
  <% end %>
</div>

<% if @authors.any? %>
  <div class="row g-4">
    <% @authors.each do |author| %>
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title">
              <%= author.name %>
              <% unless author.active %>
                <span class="badge bg-secondary ms-2">Inactive</span>
              <% end %>
            </h5>
            <% if author.bio.present? %>
              <p class="card-text">
                <small class="text-muted">
                  <%= truncate(author.bio, length: 150) %>
                </small>
              </p>
            <% end %>
            
            <div class="mt-3">
              <h6 class="text-muted mb-2">
                <i class="bi bi-book"></i> Books (<%= author.books.count %>)
              </h6>
              <% if author.books.any? %>
                <ul class="list-unstyled mb-0">
                  <% author.books.each do |book| %>
                    <li class="mb-2">
                      <i class="bi bi-bookmark"></i>
                      <%= link_to book.title, book_path(book), class: "text-decoration-none" %>
                      <small class="text-muted">(<%= book.year %>)</small>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="text-muted mb-0">
                  <small>No books yet</small>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card shadow-sm">
    <div class="card-body text-center py-5">
      <i class="bi bi-person" style="font-size: 3rem; color: #6c757d;"></i>
      <h4 class="mt-3">No authors yet</h4>
      <p class="text-muted">Authors will appear here once they are added to the system.</p>
    </div>
  </div>
<% end %>
