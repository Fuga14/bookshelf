<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1>Import Books</h1>
      
      <%= form_with(model: @import, url: imports_path, local: true, multipart: true, class: "mt-4") do |form| %>
        <% if @import.errors.any? %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h4 class="alert-heading"><%= pluralize(@import.errors.count, "error") %> prohibited this import from being saved:</h4>
            <ul class="mb-0">
              <% @import.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% end %>

        <div class="card shadow-sm">
          <div class="card-body">
            <div class="mb-3">
              <%= form.label :user_id, "User", class: "form-label" %>
              <%= form.select :user_id, 
                  options_from_collection_for_select(@users, :id, :name, @import.user_id),
                  { include_blank: "Select a user" },
                  { class: "form-select #{'is-invalid' if @import.errors[:user_id].any?}", required: true } %>
              <% if @import.errors[:user_id].any? %>
                <div class="invalid-feedback">
                  <%= @import.errors[:user_id].first %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= form.label :csv_file, "CSV File", class: "form-label" %>
              <%= form.file_field :csv_file, accept: ".csv", class: "form-control", required: true %>
              <div class="form-text">
                CSV file should have headers: title, author_name, year, description
              </div>
            </div>

            <div class="d-flex gap-2">
              <%= form.submit "Import Books", class: "btn btn-primary" %>
              <%= link_to "Cancel", books_path, class: "btn btn-secondary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

