<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">
    <i class="bi bi-book"></i> Books
  </h1>
  <div class="d-flex gap-2">
    <%= link_to new_import_path, class: "btn btn-outline-success" do %>
      <i class="bi bi-upload"></i> Import Books
    <% end %>
    <%= link_to new_book_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-circle"></i> New Book
    <% end %>
  </div>
</div>

<!-- Search and Sort Form -->
<div class="card shadow-sm mb-4">
  <div class="card-body">
    <%= form_with url: books_path, method: :get, local: true, class: "row g-3" do |form| %>
      <div class="col-md-6">
        <%= form.text_field :search, 
            value: params[:search], 
            placeholder: "Search by title...", 
            class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= form.select :sort, 
            options_for_select([
              ["Sort by...", ""],
              ["Year (Ascending)", "year_asc"],
              ["Year (Descending)", "year_desc"],
              ["Title (A-Z)", "title_asc"],
              ["Title (Z-A)", "title_desc"]
            ], params[:sort]),
            {},
            { class: "form-select" } %>
      </div>
      <div class="col-md-2">
        <%= form.submit "Search", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>

<% if @books.any? %>
  <div class="row g-4">
    <% @books.each do |book| %>
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm h-100">
          <% if book.cover.present? %>
            <% cover_url = book.cover_url(:thumbnail) || book.cover_url %>
            <% if cover_url %>
              <%= image_tag cover_url.to_s, alt: "Book cover", class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
            <% end %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title">
              <%= book.title %>
            </h5>
            <p class="card-text">
              <strong>Author:</strong> <%= book.author&.name || "N/A" %><br>
              <strong>Year:</strong> <%= book.year %><br>
              <% if book.description.present? %>
                <strong>Description:</strong>
                <small class="text-muted d-block mt-1">
                  <%= truncate(book.description, length: 100) %>
                </small>
              <% end %>
            </p>
          </div>
          <div class="card-footer bg-white border-top">
            <div class="d-flex gap-2">
              <%= link_to book_path(book), class: "btn btn-sm btn-outline-primary" do %>
                <i class="bi bi-eye"></i> View
              <% end %>
              <%= link_to edit_book_path(book), class: "btn btn-sm btn-outline-warning" do %>
                <i class="bi bi-pencil"></i> Edit
              <% end %>
              <%= link_to book_path(book), 
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this book?" }, 
                  class: "btn btn-sm btn-outline-danger" do %>
                <i class="bi bi-trash"></i> Delete
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card shadow-sm">
    <div class="card-body text-center py-5">
      <i class="bi bi-book" style="font-size: 3rem; color: #6c757d;"></i>
      <h4 class="mt-3">No books yet</h4>
      <p class="text-muted">Get started by adding your first book!</p>
      <%= link_to new_book_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-circle"></i> Add Your First Book
      <% end %>
    </div>
  </div>
<% end %>
